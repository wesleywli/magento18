<?xml version="1.0"?>
<config>
    <modules>
        <Kentec_Boxconfig>
            <version>0.1.0</version>
        </Kentec_Boxconfig>
    </modules>
    <frontend>
        <translate>
            <modules>
                <translations>
                    <files>
                        <default>Kentec.csv</default>
                    </files>
                </translations>
            </modules>
        </translate>
        <routers>
            <boxconfig>
                <use>standard</use>
                <args>
                    <module>Kentec_Boxconfig</module>
                    <frontName>boxconfig</frontName>
                </args>
            </boxconfig>
        </routers>
        <layout>
            <updates>
                <boxconfig>
                    <file>boxconfig.xml</file>
                </boxconfig>
            </updates>
        </layout>
    </frontend>   
    <admin>
        <routers>
            <boxconfig>
                <use>admin</use>
                <args>
                    <module>Kentec_Boxconfig</module>
                    <frontName>boxconfig</frontName>
                </args>
            </boxconfig>
        </routers>
    </admin>
    <adminhtml>
        <translate>
            <modules>
                <translations>
                    <files>
                        <default>Kentec.csv</default>
                    </files>
                </translations>
            </modules>
        </translate>
        <menu>
            <boxconfig module="boxconfig">
                <title>Boxconfig</title>
                <sort_order>71</sort_order>               
                <children>
                    <items module="boxconfig">
                        <title>Manage Items</title>
                        <sort_order>0</sort_order>
                        <action>boxconfig/adminhtml_boxconfig</action>
                    </items>
                </children>
            </boxconfig>
        </menu>
        <acl>
            <resources>
                <all>
                    <title>Allow Everything</title>
                </all>
                <admin>
                    <children>
                        <boxconfig>
                            <title>Boxconfig Module</title>
                            <sort_order>200</sort_order>
                        </boxconfig>
                    </children>
                </admin>
            </resources>   
        </acl>
        <layout>
            <updates>
                <boxconfig>
                    <file>boxconfig.xml</file>
                </boxconfig>
            </updates>
        </layout>
        <events>
            <customer_save_after>
                <observers>
                    <kentec_boxconfig>
                        <type>singleton</type>
                        <class>kentec_boxconfig_Model_Observer</class>
                        <method>saveBoxconfigTabData</method>
                    </kentec_boxconfig>
                </observers>
            </customer_save_after>
            <customer_delete_after>
                <observers>
                    <kentec_boxconfig>
                        <type>singleton</type>
                        <class>kentec_boxconfig_Model_Observer</class>
                        <method>deleteBoxconfigTabData</method>
                    </kentec_boxconfig>
                </observers>
            </customer_delete_after>
        </events>
    </adminhtml>  
    
    <global>
        <models>
            <boxconfig>
                <class>Kentec_Boxconfig_Model</class>
                <resourceModel>boxconfig_resource</resourceModel>
            </boxconfig>
            <boxconfig_resource>
                <class>Kentec_Boxconfig_Model_Resource</class>
                <entities>
                    <boxconfig>
                        <table>boxconfig</table>
                    </boxconfig>
                </entities>
            </boxconfig_resource>
        </models>
        <resources>
            <boxconfig_setup>
                <setup>
                    <module>Kentec_Boxconfig</module>
                    <class>Kentec_Boxconfig_Model_Resource_Setup</class>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </boxconfig_setup>
            <boxconfig_write>
                <connection>
                    <use>core_write</use>
                </connection>
            </boxconfig_write>
            <boxconfig_read>
                <connection>
                    <use>core_read</use>
                </connection>
            </boxconfig_read>
        </resources>
        <blocks>
            <boxconfig>
                <class>Kentec_Boxconfig_Block</class>
            </boxconfig>
        </blocks>
        <helpers>
            <boxconfig>
                <class>Kentec_Boxconfig_Helper</class>
            </boxconfig>
        </helpers>
    </global>

</config>